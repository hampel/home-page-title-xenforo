  <public_template_modifications>
    <modification template="forum_list" modification_key="homepageTitleForumList" description="modify board title on forum list" execution_order="9" enabled="1" action="str_replace">
      <find><![CDATA[<xen:h1>{$xenOptions.boardTitle}</xen:h1>]]></find>
      <replace><![CDATA[<xen:if is="{$xenOptions.homepageTitle}">
	<xen:container var="$homePageTitle">{$xenOptions.homepageTitle}</xen:container>
	<xen:h1>{$xenOptions.homepageTitle}</xen:h1>
<xen:else />
	$0
</xen:if>]]></replace>
    </modification>
    <modification template="forum_list" modification_key="homepageTitleForumListOG" description="modify board title on forum list in open graph" execution_order="10" enabled="1" action="str_replace">
      <find><![CDATA[<xen:set var="$title">{$xenOptions.boardTitle}</xen:set>]]></find>
      <replace><![CDATA[<xen:set var="$title">{xen:if $xenOptions.homepageTitle, $xenOptions.homepageTitle, $xenOptions.boardTitle}</xen:set>]]></replace>
    </modification>
    <modification template="PAGE_CONTAINER" modification_key="homepageTitlePageContainer" description="Add home page title to page container" execution_order="10" enabled="1" action="str_replace">
      <find><![CDATA[<title><xen:if is="{$title}">{xen:raw $title} | {$xenOptions.boardTitle}<xen:else />{$xenOptions.boardTitle}</xen:if></title>]]></find>
      <replace><![CDATA[<title><xen:if is="{$homePageTitle}">{xen:raw $homePageTitle}<xen:elseif is="{$title}" />{xen:raw $title} | {$xenOptions.boardTitle}<xen:else />{$xenOptions.boardTitle}</xen:if></title>]]></replace>
    </modification>
  </public_template_modifications>
