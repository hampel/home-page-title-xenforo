    <phrase title="option_homepageTitle" version_id="1" version_string="0.1.0"><![CDATA[Homepage Title]]></phrase>
    <phrase title="option_homepageTitle_explain" version_id="1" version_string="0.1.0"><![CDATA[Set a different title for the forum home page (forum_list)]]></phrase>
